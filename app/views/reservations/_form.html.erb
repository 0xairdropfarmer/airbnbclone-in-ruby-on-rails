<%= form_for([@room,@room.reservations.new]) do |f| %>
<%= f.text_field :start_date,class:'datepicker' %>
<%= f.text_field :end_date,class:'datepicker' %>
<br/>
<%= f.submit "Book Now" %>

<% end %>
<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
    format: 'dd/mm/yyyy',
    });
  });
</script>